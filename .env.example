# ============================================================================
# DeepMind Workspace â€” Environment Configuration
# Copy to .env and fill in your actual values
# ============================================================================

# DeepSeek API
DEEPSEEK_API_KEY=your_deepseek_api_key_here
DEEPSEEK_BASE_URL=https://api.deepseek.com/v1
DEEPSEEK_MODEL=deepseek-chat
DEEPSEEK_REASONING_MODEL=deepseek-reasoner

# OpenAI API (for GPT-4o model option)
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_BASE_URL=https://api.openai.com/v1
OPENAI_MODEL=gpt-4o

# Application
APP_HOST=0.0.0.0
APP_PORT=8080
APP_SECRET_KEY=change-this-to-a-secure-random-string-min-32-chars
APP_ENV=production
APP_LOG_LEVEL=INFO

# Database Paths
# For local development:
# SQLITE_DB_PATH=./data/conversations.db
# CHROMADB_PATH=./data/chromadb
# For Render (with persistent disk at /data):
SQLITE_DB_PATH=/data/conversations.db
CHROMADB_PATH=/data/chromadb

# GitHub Integration
GITHUB_TOKEN=your_github_personal_access_token
GITHUB_DEFAULT_ORG=

# Dropbox Integration
DROPBOX_APP_KEY=your_dropbox_app_key
DROPBOX_APP_SECRET=your_dropbox_app_secret
DROPBOX_REFRESH_TOKEN=

# Google Drive Integration
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REDIRECT_URI=http://localhost:8080/api/connectors/google/callback

# Embedding Model
EMBEDDING_MODEL=all-MiniLM-L6-v2
EMBEDDING_DIMENSION=384

# Context Management
MAX_CONTEXT_TOKENS=128000
SUMMARY_TRIGGER_TOKENS=96000
RECENT_MESSAGES_KEEP=20
